{
  "name": "plottr",
  "description": "An elegant writing tool that helps organize plotlines",
  "repository": "https://github.com/cameronsutter/plottr_electron.git",
  "private": true,
  "readme": "Copyright 2016 C. Louis S. (Cameron Sutter)",
  "version": "1.0.25",
  "author": {
    "name": "C. Louis S.",
    "email": "cameronsutter0@gmail.com",
    "url": "https://medium.com/@camsutter"
  },
  "main": "bin/main.js",
  "scripts": {
    "start": "NODE_ENV=dev electron .",
    "compile": "node_modules/.bin/webpack",
    "watch": "NODE_ENV=dev node_modules/.bin/webpack -w",
    "createDevLicense": "NODE_ENV=license electron .",
    "changelog": "changelog cameronsutter/plottr_electron all -m > changelog.md",
    "build:js": "node bin/build.js",
    "build:all": "bin/build.sh",
    "build:trial": "bin/build.sh TRIALMODE",
    "pack": "NODE_ENV=production node_modules/.bin/webpack 1> /dev/null",
    "pack:windows": "node_modules\\.bin\\webpack",
    "dist": "npm run pack && build",
    "dist:windows": "npm run pack:windows && build",
    "dist:all": "npm run pack && build -mw"
  },
  "dependencies": {
    "changelog": "^1.0.7",
    "deep-diff": "^0.3.4",
    "docx": "^2.1.1",
    "electron-json-storage": "^2.0.0",
    "lodash": "^4.17.4",
    "mixpanel-browser": "^2.9.14",
    "pagedown": "^1.1.0",
    "pretty-date": "^0.2.0",
    "react": "^0.14.0",
    "react-bootstrap": "^0.27.3",
    "react-dom": "^0.14.0",
    "react-modal": "^0.6.1",
    "react-overlays": "^0.6.3",
    "react-redux": "^4.4.5",
    "react-waypoint": "^2.0.1",
    "redux": "^3.5.2",
    "request": "^2.74.0",
    "rollbar": "^2.0.4"
  },
  "devDependencies": {
    "babel-core": "^5.8.29",
    "babel-loader": "^5.3.2",
    "babel-plugin-react-transform": "^1.1.1",
    "css-loader": "^0.22.0",
    "devtron": "^1.2.1",
    "dotenv": "^4.0.0",
    "electron-builder": "^17.7.0",
    "electron-devtools-installer": "^2.0.0",
    "electron-packager": "^7.7.0",
    "electron-prebuilt": "^1.3.0",
    "file-loader": "^0.8.5",
    "json-loader": "^0.5.4",
    "node-sass": "^3.8.0",
    "sass-loader": "^3.1.1",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.2"
  },
  "build": {
    "appId": "com.plottr.app",
    "publish": [
      "github"
    ],
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,test,__tests__,tests,powered-test,example,examples,*.d.ts}",
      "!**/node_modules/.bin",
      "!**/*.{o,hprof,orig,pyc,pyo,rbc,md,MD}",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,__pycache__,thumbs.db,.gitignore,.gitattributes,.editorconfig,.flowconfig,.yarn-metadata.json,.idea,appveyor.yml,.travis.yml,circle.yml,npm-debug.log,.nyc_output,yarn.lock,.yarn-integrity}",
      "!src${/*}",
      "!webpack.config.js",
      "!example*.plottr",
      "!example*.docx",
      "!screenshots"
    ],
    "copyright": "Copyright Â© C. Louis S. (Cameron Sutter)",
    "productName": "Plottr",
    "fileAssociations": {
      "ext": "plottr",
      "name": "Plottr",
      "description": "An elegant writing tool to organize plotlines"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "dmg": {
      "backgroundColor": "#efefee"
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    },
    "nsis": {
      "perMachine": true
    }
  }
}
